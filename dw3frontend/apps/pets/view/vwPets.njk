{% extends "templates/base.html" %}

{% block content %}
  
  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item"><a href="/home">Home</a></li>
    <li class="breadcrumb-item active">{{parametros.title}}</li>
  </ol>
  
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">Listagem de Pets</h6>
      <button class="btn btn-success" onclick="abrirManutencaoPet()">
        <i class="fas fa-plus"></i> Novo Pet
      </button>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTablePets" width="100%" cellspacing="0">
          <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Raça</th>
                <th>Dt. Nasc.</th>
                <th>Nome do Tutor</th> 
                <th>Ações</th>
            </tr>
         </thead>
          <tbody id="listaPets">
            </tbody>
        </table>
      </div>
    </div>
  </div>

<script src="/static/js/api.js"></script>
<script src="/static/js/pets.js"></script>

{% endblock %}