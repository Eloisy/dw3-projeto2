{% extends "templates/base.html" %}

{% block content %}
  
  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item"><a href="/home">Home</a></li>
    <li class="breadcrumb-item active">{{parametros.title}}</li>
  </ol>
  
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">Histórico de Atendimentos</h6>
      <button class="btn btn-success" onclick="abrirManutencaoAtendimento()">
        <i class="fas fa-plus"></i> Novo Atendimento
      </button>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTableAtendimentos" width="100%" cellspacing="0">
          <thead>
            <tr>
                <th>ID</th>
                <th>Pet</th>
                <th>Tutor</th>  
                <th>Serviço</th> 
                <th>Valor (R$)</th>
                <th>Data</th>
                <th>Ações</th>
            </tr>
          </thead>
          <tbody id="listaAtendimentos">
            </tbody>
        </table>
      </div>
    </div>
  </div>

<script src="/static/js/api.js"></script>
<script src="/static/js/atendimentos.js"></script>

{% endblock %}